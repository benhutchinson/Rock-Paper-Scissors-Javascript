<!doctype>
<html>
  <head>
    <title>WHO SAID RON BURGUNDY?</title>
    <style>

    @font-face {
      font-family: 'Despicable Me';
      src: url('./despicable.woff');
    }

    body {
      font-family: 'Despicable Me';
      margin: 8% 15% 5% 15%;
    }

    .choices {
      text-align: center;
      margin-bottom: 13%;
    }

    .choices img {
      width: 19%;
      cursor: pointer;
      opacity: 1;
      transition: 1.5s all ease;
      -webkit-filter: grayscale(100%);
      -moz-filter: grayscale(100%);
      filter: grayscale(100%);
    }

    .choices img:hover {
      opacity: 1;
      -webkit-filter: grayscale(0%);
      -moz-filter: grayscale(0%);
      filter: grayscale(0%);
    }

    h1 {
      text-transform: uppercase;
      font-size: 4em;
      text-align: center;
      color: #d35400;
      letter-spacing: 2px; 
      margin-bottom: 2em;
      line-height: 1em;
    }

    h2, h3 {
      text-transform: capitalize;
    }

    #results {
      list-style: none;
    }

    #results li {
      color: #2c3e50;
      font-size: 4em;
      text-transform: uppercase;
      padding: 5px;
      margin-left: 20%;
      margin-right: 20%; 
      margin-bottom: 15px;
      text-align: center;
      display:none;
    }
    </style>
  </head>
  <body>
    <h1>WHO SAID RON BURGUNDY?</h1>
    <div class='choices'>
      <img src="Despicable-Me-Minions-014.jpg" data-pick="rock">
      <img src="british_minion_by_memanchi-d6wpvz0.jpg" data-pick="paper">
      <img src="minions-1.jpg" data-pick="scissors">
      <img src="fruit_head_minion.jpg" data-pick="lizard">
      <img src="04f28b09fa7134f5703d3c68fc0b9f5c.jpg" data-pick="spock">
    </div>

    <ul id="results">
    </ul>

    <script src='./Lizard.js'></script>
    <script src='./jquery-2.1.1.min.js'></script>
    <script>
      $(document).ready(function(){
        var giorgia = new Player('You');
        // var ben = new Player('Ben');
        var computer = new Computer;
        var rules = new Rules(giorgia, computer)

        $('.choices img').on('click', function(){
          giorgia.picks($(this).data('pick'));
          computer.picks();
        $('<li>'+rules.winningMessage()+'</li>').prependTo('#results').slideDown(1000);      
        // $('li:nth-child(3)').fadeOut(1000);
         $('li:nth-child(2)').animate({opacity: 0, fontSize: 0}, 3000, function(){
            $(this).remove();
          });

          });
        });
      
    </script>
  </body>
</html>